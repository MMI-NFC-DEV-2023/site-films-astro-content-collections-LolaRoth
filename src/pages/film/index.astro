---
import Layout from "@layouts/Layout.astro";
import { getCollection } from "astro:content"

const film = await getCollection("film");
---
<Layout pageTitle="Liste des films">
    <h1 class="text-center text-xl mt-4">Liste des films</h1>
    <ul class="flex gap-2 m-4">
        {film.map((film) => 
        <li>
            <a class="bg-violet-400 p-2 rounded-lg" href={`/film/${film.id}`}>{film.data.titre}</a>
        </li>)}
    </ul>
</Layout>